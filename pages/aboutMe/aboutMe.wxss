.container {
    overflow: hidden;
}

.header {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100%;
}

.header .name {
    margin-top: 16rpx;
    font-size: 48rpx;
    font-weight: bold;
}

.header .verse {
    margin-top: 16rpx;
    color: #ddd;
    font-size: 36rpx;
}

.list {
    overflow: auto;
    height: calc(100vh - 200rpx - 16rpx - 64rpx - 110rpx - 48rpx - 16rpx);
    text-align:start;
}

.item .icon {
    font-size: 32rpx;
}

.item .text{
    margin-top: 16rpx;
}